= form_for @user, :url => url, :html => { :class => 'bp' } do |f|

  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  %fieldset
    %legend Права доступа
    - User::PERMISSIONS.each do |p, name|
      = check_box_tag "user[permissions][]", p, @user.has_permission?(p)
      = name
      %br/
    = hidden_field_tag "user[permissions][]", ""
  .actions
    = f.submit 'Сохранить'
    = link_to 'Отмена', company_users_path
