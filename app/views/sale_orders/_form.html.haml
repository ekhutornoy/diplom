= form_for @sale_order do |f|
  -if @sale_order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale_order.errors.count, "error")} prohibited this sale_order from being saved:"
      %ul
        - @sale_order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :client
    = f.text_field :client
  .actions
    = f.submit 'Save'
